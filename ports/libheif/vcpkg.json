{
  "name": "libheif",
  "version": "1.17.6",
  "port-version": 2,
  "description": "libheif is an HEIF and AVIF file format decoder and encoder.",
  "homepage": "http://www.libheif.org/",
  "license": "LGPL-3.0-only",
  "supports": "!xbox",
  "dependencies": [
    {
      "name": "gdk-pixbuf",
      "platform": "!windows"
    },
    "libde265",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    "hevc"
  ],
  "features": {
    "hevc": {
      "description": "HEVC encoding via x265",
      "license": "GPL-2.0-or-later",
      "dependencies": [
        "x265"
      ]
    },
	"aom": {
      "description": "AVIF decoding via libaom",
      "license": "BSD-2-Clause",
      "dependencies": [
        "aom"
      ]
    },
	"sharpyuv": {
      "description": "sharpyuv via libwebp",
      "license": "BSD-3-Clause",
      "dependencies": [
        "libwebp"
      ]
    },
	"jpeg": {
      "description": "jpeg via libjpeg-turbo",
      "license": "BSD-3-Clause",
      "dependencies": [
        "libjpeg-turbo"
      ]
    },
	"uncompressed": {
      "description": "uncomressed codec"
    }
  }
}
